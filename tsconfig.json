{
  "compilerOptions": {
    // "jsx": "react",
    "target": "esnext",
    "module": "esnext",
    "rootDir": "./src",
    "moduleResolution": "node",
    "paths": {},
    "typeRoots": ["./types", "./node_modules/@types"],
    "declaration": false,
    "outDir": "./dist",
    "removeComments": true /* 删除注释 */,
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "src/test"]
}
